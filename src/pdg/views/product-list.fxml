<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="400.0" minWidth="600.0" onKeyPressed="#onScreenKeyPressed" stylesheets="@../resources/styles/app.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pdg.controllers.ProductListController">
    <children>
        <HBox alignment="CENTER_RIGHT" prefWidth="200.0" spacing="5.0">
            <children>
                <ToggleButton fx:id="selectMultiple" mnemonicParsing="false" onAction="#onMultipleButtonClick" text="Select Multiple">
                    <styleClass>
                        <String fx:value="button" />
                        <String fx:value="btn-dark" />
                    </styleClass></ToggleButton>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="findButton" mnemonicParsing="false" onAction="#onFindButtonClick" styleClass="btn-green" text="Find" textAlignment="CENTER" />
                <Button fx:id="showAllButton" mnemonicParsing="false" onAction="#onShowAllButtonClick" text="Show All" textAlignment="CENTER" />
            </children>
            <padding>
                <Insets bottom="15.0" />
            </padding>
        </HBox>
        <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="Image" />
                <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title" />
                <TableColumn fx:id="priceColumn" prefWidth="75.0" text="Price" />
                <TableColumn fx:id="qtyColumn" prefWidth="75.0" text="Quantity" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <contextMenu>
                <ContextMenu onShowing="#onContextMenuShowing">
                    <items>
                        <MenuItem fx:id="viewMenuItem" mnemonicParsing="false" onAction="#onViewMenuItemClick" text="View" />
                        <MenuItem fx:id="editMenuItem" mnemonicParsing="false" onAction="#onEditMenuItemClick" text="Edit" />
                        <MenuItem fx:id="removeMenuItem" mnemonicParsing="false" onAction="#onRemoveMenuItemClick" text="Remove" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>
        <HBox fx:id="paginationPane" alignment="CENTER" prefWidth="200.0" spacing="5.0" styleClass="pagination-list" VBox.vgrow="NEVER">
            <children>
                <Button mnemonicParsing="false" text="◄" />
                <Button mnemonicParsing="false" text="1" />
                <Button mnemonicParsing="false" text="2" />
                <Button mnemonicParsing="false" text="3" />
                <Button mnemonicParsing="false" text="4" />
                <Label text="...">
                    <padding>
                        <Insets left="8.0" right="8.0" />
                    </padding>
                </Label>
                <Button mnemonicParsing="false" text="14" />
                <Button mnemonicParsing="false" text="►" />
            </children>
            <padding>
                <Insets left="15.0" right="15.0" top="15.0" />
            </padding>
        </HBox>
    </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
