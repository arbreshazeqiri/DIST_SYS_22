<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="pdg.serverChat.Controller"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Button fx:id="button_send" layoutX="300.0" layoutY="436.0" style="-fx-border-radius: 100; -fx-background-color: #51bf3d; -fx-font-size: 15px;" text="Send" />
        <TextField fx:id="tf_message" layoutX="33.0" layoutY="434.0" prefHeight="35.0" prefWidth="260.0" promptText="Write message here ...." style="-fx-background-radius: 70; -fx-font-size: 15px; -fx-text-fill: #eeeeee; -fx-background-color: #455a64; -fx-font-family: Arial !important;" />
        <ScrollPane fx:id="sp_main" fitToWidth="true" layoutX="33.0" layoutY="84.0" prefHeight="340.0" prefWidth="321.0" style="-fx-background-color: transparent; -fx-border-color: derive(gray, 100%);">
            <content>
                <VBox fx:id="vbox_messages" prefHeight="248" prefWidth="337.0" />
            </content>
        </ScrollPane>
        <Label layoutX="33.0" layoutY="40.0" style="-fx-font-family: Arial !important;" text="Messenger" textFill="#fffdfd">
            <font>
                <Font name="Arial Rounded MT Bold" size="23" />
            </font>
        </Label>
    </children>
</AnchorPane>
